<vbox style="padding: 5px;" width="100%" height="100%">

    <absolute>
        <absolute id="box1" width="200" height="200" style="border: 1px solid $normal-border-color">
            <box id="redBox" left="25" top="25" width="50%" height="50%" style="background-color: red;border:1px solid red;" />
            <box id="greenBox" left="50" top="50" width="50%" height="50%" style="background-color: green;border:1px solid green;" />
            <box id="blueBox" left="75" top="75" width="50%" height="50%" style="background-color: blue;border:1px solid blue;" />
        </absolute>
        <absolute width="200" height="200" left="-10" top="-10">
            <box id="yellowBox" left="40" top="40" width="50%" height="50%" style="background-color: #e4e71c;border:1px solid green;" />
        </absolute>
    </absolute>
    <hbox>
        <button id="redButtonBack" text="Red To Back" onclick="redBox.moveComponentToBack() " />
        <button id="greenButtonBack" text="Green To Back" onclick="greenBox.moveComponentToBack();" />
        <button id="blueButtonBack" text="Blue To Back" onclick="blueBox.moveComponentToBack();" />
    </hbox>
    <hbox>
        <button id="redButtonFront" text="Red To Front" onclick="redBox.moveComponentToFront();" />
        <button id="greenButtonFront" text="Green To Front" onclick="greenBox.moveComponentToFront();" />
        <button id="blueButtonFront" text="Blue To Front" onclick="blueBox.moveComponentToFront();" />
    </hbox>
    <hbox>
        <button id="redButtonBackward" text="Red To Backward" onclick="redBox.moveComponentBackward();" />
        <button id="greenButtonBackward" text="Green To Backward" onclick="greenBox.moveComponentBackward();" />
        <button id="blueButtonBackward" text="Blue To Backward" onclick="blueBox.moveComponentBackward();" />
    </hbox>
    <hbox>
        <button id="redButtonFrontward" text="Red To Frontward" onclick="redBox.moveComponentFrontward();" />
        <button id="greenButtonFrontward" text="Green To Frontward" onclick="greenBox.moveComponentFrontward();" />
        <button id="blueButtonFrontward" text="Blue To Frontward" onclick="blueBox.moveComponentFrontward();" />
    </hbox>

</vbox>
